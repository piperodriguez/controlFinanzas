<link rel="stylesheet" href="./css/bootstrap.min.css">
<div class="container">
  <div class="card text-center">
    <div class="card-body">
      <h1>Control Financiero</h1>
      <img src='http://localhost:3000/uploads/icon.jpeg' class='img-fluid' style='max-width:80px'>
    </div>
  </div>
  <!-- Content here -->
  <div class="card">
    <h5 class="card-header">Detalle Deuda</h5>
    <div class="card-body">
      <h5 class="card-title"><p id="deuda"></p></h5>
      <p class="card-text"><p id="descripcion_deuda"></p></p>
      <span>Valor Deuda:</span>
      <p class="card-text" id="valor"></p>
      <span>Saldo Deuda:</span>
      <p class="card-text" id="saldo"></p>
      <span>Fecha Deuda:</span>
      <p class="card-text" id="fecha"></p>
    </div>
  </div>
  <a href="/home" class="btn btn-warning mt-3">Volver</a>
</div>
<script type="text/javascript">
    console.log('por aqui')
    var url = new URL(window.location.href);
    const id = url.searchParams.get("id");
    console.log(id)
    fetch("http://localhost:3000/api/v1/redirect/deuda/" + id).then(response => {
      console.log(response)
      if (response.ok) {
        return response.json();
      }
    }).then(data => {
      console.log(data)
      if (data) {
        const ar = data;
        ar.forEach((elem) => {
          console.log(elem.precio)
          document.getElementById("deuda").innerHTML = elem.nombre_deuda;
          document.getElementById("descripcion_deuda").innerHTML = elem.descripcion_deuda;
          document.getElementById("valor").innerHTML = elem.valor_deuda;
          document.getElementById("saldo").innerHTML = elem.saldo_deuda;
          document.getElementById("fecha").innerHTML = elem.fecha_deuda;
        });
      };
    }).catch(err => console.error(err));
</script>
</body>